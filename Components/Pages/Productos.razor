@page "/productos"
@inject NavigationManager NavMan
@rendermode InteractiveServer

@using Tarea3.Models    
@using Tarea3.Services  
@inject ProductoService ProductoServicio
@inject IJSRuntime JSx


<PageTitle>Gestión de Productos</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-secondary">Gestión de Inventario de Productos</h3>
    <button class="btn btn-primary btn-lg" @onclick="NuevoProducto">
        <i class="oi oi-plus"></i> Nuevo Producto
    </button>
</div>
<div class="card shadow">
    <div class="card-body">
        <h5 class="card-title">Inventario Actual</h5>

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Stock Actual</th>
                    <th>Precio Unitario</th>
                    <th>Fecha Ingreso</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (productos != null)
                {
                    @foreach (var producto in productos)
                    {
                        <tr>
                            <td>@producto.Id.Substring(0, 4)...</td>
                            <td>@producto.Nombre</td>
                            <td>
                                @if (producto.StockActual <= 10) // Lógica de alerta simple
                                {
                                    <span class="badge bg-warning text-dark">Bajo (@producto.StockActual)</span>
                                }
                                else
                                {
                                    @producto.StockActual
                                }
                            </td>
                            <td>
                                <LabelDinero Valor="@(Convert.ToDouble(producto.PrecioUnitario))" />
                            </td>
                            <td>@producto.FechaIngreso.ToShortDateString()</td>
                            <td>
                                <button @onclick="() => editarFila(producto)" class="btn btn-info btn-sm me-2">
                                    <i class="oi oi-pencil"></i> Editar
                                </button>
                                <button @onclick="() => imprimirX(producto)" class="btn btn-success btn-sm me-2">
                                    <i class="oi oi-print"></i> Imprimir
                                </button>
                                <button @onclick="() => eliminarFila(producto)" class="btn btn-danger btn-sm">
                                    <i class="oi oi-trash"></i> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    // 2. Usamos la clase Producto del namespace Tarea3.Models
    List<Producto> productos = new List<Producto>();

    // 3. Reemplazamos OnAfterRenderAsync por OnInitializedAsync para cargar datos de la DB
    protected override async Task OnInitializedAsync()
    {
        productos = await ProductoServicio.GetAllProductosAsync();
    }
    
    private void imprimirX(Producto producto)
    {
        // Navega a la nueva ruta de impresión que creamos: /productos/imprimir/{id}
        JSx.InvokeVoidAsync("window.open", "productos/imprimir/" + producto.Id, "_blank");
    }

    private void NuevoProducto()
    {
        NavMan.NavigateTo("productos/nuevo");
    }

    private void editarFila(Producto producto)
    {
        NavMan.NavigateTo("productos/editar/" + producto.Id);
    }

    // 3. Actualizamos la lógica de eliminación para usar el servicio de base de datos
    private async Task eliminarFila(Producto producto)
    {
        var rs = await JSx.InvokeAsync<bool>("confirm", $"¿Estás seguro de eliminar el producto '{producto.Nombre}'?");

        if (rs == true)
        {
            await ProductoServicio.DeleteProductoAsync(producto.Id);
            // Recargar la lista desde la base de datos
            productos = await ProductoServicio.GetAllProductosAsync(); 
            StateHasChanged();
        }
    }
}