@page "/productos"
@inject NavigationManager NavMan
@rendermode InteractiveServer
@using System.Text.Json
@inject IJSRuntime JSx

<PageTitle>Gestión de Productos</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-secondary">Gestión de Inventario de Productos</h3>
    <button class="btn btn-primary btn-lg" @onclick="NuevoProducto">
        <i class="oi oi-plus"></i> Nuevo Producto
    </button>
</div>
<div class="card shadow">
    <div class="card-body">
        <h5 class="card-title">Inventario Actual</h5>

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Stock Actual</th>
                    <th>Precio Unitario</th>
                    <th>Fecha Ingreso</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in productos)
                {
                    <tr>
                        <td>@producto.Id.Substring(0, 4)...</td>
                        <td>@producto.Nombre</td>
                        <td>
                            @if (producto.StockActual <= 10) // Lógica de alerta simple
                            {
                                <span class="badge bg-warning text-dark">Bajo (@producto.StockActual)</span>
                            }
                            else
                            {
                                @producto.StockActual
                            }
                        </td>
                        <td>
                            <LabelDinero Valor="@(Convert.ToDouble(producto.PrecioUnitario))" />
                        </td>
                        <td>@producto.FechaIngreso.ToShortDateString()</td>
                        <td>
                            <button @onclick="() => editarFila(producto)" class="btn btn-info btn-sm me-2">
                                <i class="oi oi-pencil"></i> Editar
                            </button>
                            <button @onclick="() => eliminarFila(producto)" class="btn btn-danger btn-sm">
                                <i class="oi oi-trash"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    List<Producto> productos = new List<Producto>();

    public class Producto
    {
        public string Id { get; set; } = Guid.NewGuid().ToString();
        public string Nombre { get; set; } = string.Empty;
        public decimal PrecioUnitario { get; set; } = 0;
        public int StockActual { get; set; } = 0;
        public DateTime FechaIngreso { get; set; } = DateTime.Now;
    }

    private void NuevoProducto()
    {
        NavMan.NavigateTo("productos/nuevo");
    }

    private void editarFila(Producto producto)
    {
        NavMan.NavigateTo("productos/editar/" + producto.Id);
    }

    private async Task eliminarFila(Producto producto)
    {
        var rs = await JSx.InvokeAsync<bool>("confirm", $"¿Estás seguro de eliminar el producto '{producto.Nombre}'?");

        if (rs == true)
        {
            productos.Remove(producto);
            // Guarda la lista de productos
            await JSx.InvokeVoidAsync("localStorage.setItem", "productos", JsonSerializer.Serialize(productos));
            StateHasChanged();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Carga la lista de productos (antes registros)
            var productosJson = await JSx.InvokeAsync<string>("localStorage.getItem", "productos");
            if (!string.IsNullOrEmpty(productosJson))
            {
                // Asegúrate de usar la clase Producto
                productos = JsonSerializer.Deserialize<List<Producto>>(productosJson) ?? new List<Producto>();
                StateHasChanged();
            }
        }
    }
}