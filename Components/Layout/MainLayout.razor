@inherits LayoutComponentBase

<div class="d-flex" style="min-height: 100vh; background-color: #f4f6f9;">

    <div class="sidebar-container border-end" style="width: 250px;">
        <NavMenu />
    </div>

    <main class="flex-grow-1 d-flex flex-column">

        <header class="top-row px-4 bg-white border-bottom shadow-sm">
            <div class="container-fluid d-flex justify-content-end align-items-center h-100">
            </div>
        </header>

        <article class="content px-4 py-4 flex-grow-1">
            @Body
        </article>

    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>